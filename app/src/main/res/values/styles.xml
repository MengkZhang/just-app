<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashThemeFull" parent="Theme.AppCompat.Light.NoActionBar">
        <!--设置背景图片-->
        <item name="android:background">@drawable/bg_splash_full_screen</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SplashThemeFull2" parent="Theme.AppCompat.Light.NoActionBar">
        <!--设置背景图片-->
        <item name="android:background">@drawable/bg_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
